    <script>
        // Get references to the forms and links
        const loginForm = document.getElementById('login-form');
        const registerForm = document.getElementById('register-form');
        const showRegisterLink = document.getElementById('show-register');
        const showLoginLink = document.getElementById('show-login');

        // Function to show the registration form and hide the login form
        showRegisterLink.addEventListener('click', (e) => {
            e.preventDefault(); // Prevent default link behavior
            loginForm.classList.add('hidden'); // Hide login form
            registerForm.classList.remove('hidden'); // Show register form
        });

        // Function to show the login form and hide the registration form
        showLoginLink.addEventListener('click', (e) => {
            e.preventDefault(); // Prevent default link behavior
            registerForm.classList.add('hidden'); // Hide register form
            loginForm.classList.remove('hidden'); // Show login form
        });
    </script>
